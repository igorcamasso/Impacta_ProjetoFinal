@model ProjetoFinal.Models.Venda
@using ProjetoFinal.ENum
@{
    
    ViewData["Title"] = "Forma de pagamento";
}

<h4>Forma de pagamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ValorTotal" class="control-label">Valor Total</label>
                <input asp-for="ValorTotal" class="form-control" readonly/>
                <span asp-validation-for="ValorTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorDesconto" class="control-label">Desconto</label>
                <input asp-for="ValorDesconto" class="form-control" />
                <span asp-validation-for="ValorDesconto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormaPagamento" class="control-label"></label>
                @Html.DropDownList("FormaPagamento", Html.GetEnumSelectList<EFormaPagamento>(),
                    "Forma de Pagamento",new { @class = "form-control" })
                <span asp-validation-for="FormaPagamento" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Finalizar Venda" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
